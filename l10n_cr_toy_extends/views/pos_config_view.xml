<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="pos_config_view_toys_extend_form">
            <field name="model">pos.config</field>
            <field name="inherit_id" ref="point_of_sale.pos_config_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@id='product_prices']" position="after">
                    <div class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="include_tax_in_product"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="include_tax_in_product"/>
                            <div class="text-muted">
                                Mostrar precios m√°s impuestos en la lista de productos.
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
